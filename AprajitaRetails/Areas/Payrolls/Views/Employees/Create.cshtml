                </div>

                <div class="form-group">
                    <label asp-for="EntryStatus" class="control-label"></label>
                    <select asp-for="EntryStatus" class="browser-default custom-select" asp-items="@Html.GetEnumSelectList<EntryStatus>()"></select>
                    <span asp-validation-for="EntryStatus" class="text-danger"></span>
                </div>
                <div class="md-form ">
                    <label asp-for="UserId" class="control-label"></label>
